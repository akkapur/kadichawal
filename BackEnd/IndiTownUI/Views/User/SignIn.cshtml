@model Interfaces.DataContracts.User

<hgroup class="title">
    <h1>@ViewRes.HomeStrings.SignIn</h1>
</hgroup>

<section id="loginForm">
<h3>@ViewRes.UserStrings.EnterUserNameAndPassword</h3>
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Sign in Form</legend>
        <ol>
            <li>
                @Html.Label(@ViewRes.UserStrings.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.Label(@ViewRes.UserStrings.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
        </ol>
        <input type="submit" value="SignIn" />
    </fieldset>
    <p>
        @Html.ActionLink(@ViewRes.HomeStrings.SignUp, "SignUp", "Person") if you don't have an account.
    </p>
}
</section>

